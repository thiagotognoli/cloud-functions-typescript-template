{
    "name": "google-cloud-functions-typescript",
    "version": "0.0.4",
    "description": "This is a TypeScript based Cloud Functions template.",
    "main": "index.js",
    "config": {
        "function_name": "helloWorld",
        "region": "us-central1",
        "gcp_project": "Test",
        "runtime": "nodejs16",
        "entry_point": "helloWorld",
        "extra_params": "--timeout 60s --max-instances 1"
    },
    "scripts": {
        "clean": "rimraf \"functions/*\"",
        "lint": "tslint --project tsconfig.json",
        "tsc": "tsc",
        "cp-package": "copyfiles package.json functions/src",
        "build": "run-s clean lint tsc cp-package",
        "test": "mocha \"functions/test/\"",
        "deploy": "gcloud functions deploy $npm_package_config_function_name --gen2 --runtime $npm_package_config_runtime --entry-point $npm_package_config_entry_point --source function/src --region=$npm_package_config_region --trigger-http --project $npm_package_config_gcp_project $npm_package_config_extra_params"
    },
    "bin": {
        "create-project": "./cli.js"
    },
    "keywords": [
        "cloud",
        "functions",
        "typescript"
    ],
    "author": "\"@flatfisher <kyoheitsuda@flatfish.jp> (https://kyohei.flatfish.jp)",
    "license": "MIT",
    "dependencies": {
        "@google-cloud/functions-framework": "^3.1.2"
    },
    "devDependencies": {
        "@types/chai": "4.3.3",
        "@types/chai-http": "4.2.0",
        "@types/express": "4.17.14",
        "@types/mocha": "9.1.1",
        "@types/moment": "2.13.0",
        "@types/node": "18.11.5",
        "chai": "4.3.6",
        "chai-http": "4.3.0",
        "copyfiles": "2.4.1",
        "express": "4.18.2",
        "mocha": "9.2.2",
        "npm-run-all": "4.1.5",
        "rimraf": "3.0.2",
        "tslint": "6.1.3",
        "typescript": "4.8.4"
    }
}